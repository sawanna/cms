<div class="random-user widget">
    <div class="block-lt"><div class="block-rt">
        <div class="block-caption">[str]Random user[/str]</div>
    </div></div>
    <div class="block-l"><div class="block-r">
        <div class="block-body">
            <div class="user-name">[component]name[/component]</div>
            <div class="user-avatar">[component]avatar[/component]</div>
            <div class="user-gender">[component]gender[/component]</div>
            <div class="user-profile-link">[component]profile[/component]</div>
         </div>
    </div></div>
    <div class="block-lb"><div class="block-rb"></div></div>
</div>

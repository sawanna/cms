<div class="new-comment-form">
    <div class="comments-caption">[str]Post new comment[/str]</div>
    <div class="node-lt"><div class="node-rt"><div class="node-t"></div></div></div>
        <div class="node-l"><div class="node-r">
            <div class="node">
                <div class="form_item">
                    <div class="form_title">[component]comment-content_title[/component]</div>
                    <div class="comments-editor">[component]comment-editor[/component]</div>
                    <div class="comments-emoticons">[component]comment-emoticons[/component]</div>
                    <div class="comments-form_element form_element">[component]comment-content[/component]</div>
                </div>
                <div class="form_item">
                    <div class="form_title">[component]comment-captcha_title[/component]</div>
                    <div id="comments-form-item form_element">[component]comment-captcha[/component]</div>
                </div>
                <div class="form_item">
                    <div id="form_element">[component]submit[/component]</div>
                </div>
            </div>
        </div></div>
    <div class="node-lb"><div class="node-rb"><div class="node-b"></div></div></div>
</div>
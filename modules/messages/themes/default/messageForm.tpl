<div class="new-message-form">
    <div class="messages-caption">[str]New private message[/str]</div>
    <div class="node-lt"><div class="node-rt"><div class="node-t"></div></div></div>
        <div class="node-l"><div class="node-r">
            <div class="node">
                 <div class="form_item">
                    <div class="form_title">[component]message-recipient_title[/component]</div>
                    <div class="form_element">[component]message-recipient[/component]</div>
                    <div class="form_description">[component]message-recipient_description[/component]</div>
                </div>
                <div class="form_item">
                    <div class="form_title">[component]message-subject_title[/component]</div>
                    <div class="form_element">[component]message-subject[/component]</div>
                    <div class="form_description">[component]message-subject_description[/component]</div>
                </div>
                 <div class="form_item">
                    <div class="form_title">[component]message-content_title[/component]</div>
                    <div class="form_element">[component]message-content[/component]</div>
                    <div class="form_description">[component]message-content_description[/component]</div>
                </div>
                <div class="form_item">
                    <div class="form_title">[component]message-captcha_title[/component]</div>
                    <div id="comments-form-item form_element">[component]message-captcha[/component]</div>
                </div>
                <div class="form_item">
                    <div id="form_element">[component]submit[/component]</div>
                </div>
            </div>
        </div></div>
    <div class="node-lb"><div class="node-rb"><div class="node-b"></div></div></div>
</div>

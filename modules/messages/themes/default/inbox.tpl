<div class="messages-list-block">
    <div class="messages-list-cap">
        <div class="messages-delete">[component]delete[/component]</div>
        <div class="messages-reply">[component]reply[/component]</div>
        <div class="messages-date"><label>[str]Date[/str]:</label> [component]created[/component]</div>
        <h2 class="messages-title">[component]subject[/component]</h2>
    </div>
    <div class="node-lt"><div class="node-rt"><div class="node-t"></div></div></div>
    <div class="node-l"><div class="node-r">
        <div class="node">
            <div class="userinfo">
                <div class="username">[component]userlink[/component]</div>
                <div class="user_avatar">[component]user_avatar[/component]</div>
                <div class="user_gender">[component]user_gender[/component]</div>
            </div>
            <div class="node-content">[component]content[/component]</div>
            <div class="clear"></div>
        </div>
    </div></div>
    <div class="node-lb"><div class="node-rb"><div class="node-b"></div></div></div>
</div>
<div class="messages-list-separator"></div>
